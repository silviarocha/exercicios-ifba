//calculo de area e perimetro do retangulo
#include <stdio.h>

int main()
{
    int b;
    int h;
    int a;
    int p; 
    
    printf("digite a base do retangulo: \n");
    scanf("%d", &b);
    printf("digite a altura do retangulo: \n");
    scanf("%d", &h);
    
    a = b * h;
    p = 2 * b + h;
    
    printf("a area do retangulo eh: %d\n\n", a);
    printf("o perimetro do retangulo eh: %d\n\n", p);
}


